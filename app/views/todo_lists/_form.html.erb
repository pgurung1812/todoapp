<%= form_with(model: todo_list) do |form| %>
  <% if todo_list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo_list.errors.count, "error") %> prohibited this todo_list from being saved:</h2>

      <ul>
        <% todo_list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" "form-group">
   
    <%= form.text_field :title, class:"form-control",placeholder:"Title" %>
  </div>

  <div class="field" "form-group">
   
    <%= form.text_area :description, class:"form-control",placeholder:"Description" %>
  </div>

<div class="field" "form-group">
   
    <%= form.date_select :duedate, class:"form-control",placeholder:"Due Date" %>
  </div>

  <div class="field" "form-group">
 
    <%= form.check_box :status, class:"form-control",placeholder:"Status" %>
  </div>

  <div class="field" "form-group">
    
    <%= form.text_field :category, class:"form-control",placeholder:"Category" %>
  </div>
  
  <div class="field" "form-group">
   
    <%= form.select :priority, TodoListsController::PRIORITIES, class:"form-control",placeholder:"Priority" %>
     
     
  </div>
<br/>
  <div class="actions">
    <%= form.submit class:"btn btn-info"%>
  </div>
<% end %>
