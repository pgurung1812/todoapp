<h1><center><b>Todo Items</b></center></h1>

<%= link_to 'New Todo Item', new_todo_list_path, class:"btn btn-primary" %>
<br/><br/>

<table class="table table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Done</th>
      <th>Title</th>
      <th>Description</th>
      <th>Due date</th>
      <th>Category</th>
      <th>Priority</th>
      <th>Creation Date</th>
      <th colspan="7"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
    
      <% if todo_list.status %>
        <tr class="table-success">
          <td>
            <%= form_for(todo_list) do |f| %>
            <%= f.check_box :status, :checked => false, :style => 'visibility: hidden' %>
            <%= f.submit "Uncross" %>
            <% end %>
          </td>
          <td class="striker"><%= todo_list.title %></td>
          <td class="striker"><%= todo_list.description %></td>
          <td class="striker"><%= todo_list.duedate %></td>
          <td class="striker"><%= todo_list.category %></td>
          <td class="striker"><%= todo_list.priority %></td>
          <td class="striker"><%= todo_list.created_at.to_date %></td>
          <td>
            <center>
              <%= link_to edit_todo_list_path(todo_list), class:"btn btn-secondary" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-pencil-square" viewBox="0 0 16 16">
                  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                </svg>
              <% end %>
            </center>
          </td>
          <td>
            <center>
              <%= link_to todo_list, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#fff" class="bi bi-trash" viewBox="0 0 16 16">
                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"></path>
                  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"></path>
                </svg>
              <% end %>
            </center>
          </td>
        </tr>
      
      <% else %>
        <tr>
          <td>
            <%= form_for(todo_list) do |f| %>
            <%= f.check_box :status, :checked => true, :style => 'visibility: hidden' %>
            <%= f.submit "Check Off" %>
            <% end %>
          </td>
          <td><%= todo_list.title %></td>
          <td><%= todo_list.description %></td>
          <% if todo_list.duedate <= Date.today %>
            <td style="color:#dc3545"><%= todo_list.duedate %></td>
          <% else %>
            <td><%= todo_list.duedate %></td>
          <% end %>
          <td><%= todo_list.category %></td>
          <td><%= todo_list.priority %></td>
          <td><%= todo_list.created_at.to_date %></td>
          <td>
            <center>
              <%= link_to edit_todo_list_path(todo_list), class:"btn btn-secondary" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-pencil-square" viewBox="0 0 16 16">
                  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                </svg>
              <% end %>
            </center>
          </td>
          <td>
            <center>
              <%= link_to todo_list, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#fff" class="bi bi-trash" viewBox="0 0 16 16">
                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"></path>
                  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"></path>
                </svg>
              <% end %>
            </center>
          </td>
        </tr>
      
      <% end %>
    <% end %>
  </tbody>
</table>

<br>